{
  "manifest_version": 3,
  "name": "Random GitHub Issue Picker",
  "version": "1.1",
  "description": "Picks a random open issue from the current GitHub repo",
  "icons": {
    "32": "icon/icon32.png",
    "64": "icon/icon64.png",
    "128": "icon/icon128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  }
}
